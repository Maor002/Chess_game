{
  "_id": {
      "type": "string",
      "description": "Unique identifier for the room (MongoDB ObjectId)."
  },
  "name": {
      "type": "string",
      "description": "Name of the room."
  },
  "code": {
      "type": "string",
      "required": true,
      "unique": true,
      "pattern": "^[0-9]{6}$",
      "description": "A unique 6-digit room code."
  },
  "players": {
      "type": "array",
      "required": true,
      "items": {
          "type": "string",
          "description": "Player identifiers or usernames."
      },
      "maxItems": 2,
      "description": "List of players in the room (max 2 players)."
  },
  "useFieldsFrom": ["detail"],
  "behaviors": ["generateRoomCode"]
}