{
  "behaviors": [
    "preSave",
    "preValidate",
    "preRemove",
    "postFind",
    "postFindOne",
    "hashPassword",
    "slugify",
    "myCustomMethod"
  ],

  "useFieldsFrom": [
    "commonFields",
    "timestamps",
    "softDelete",
    "auditLog"
  ],

  "simpleString": {
    "type": "String",
    "required": true,
    "unique": true,
    "trim": true,
    "lowercase": true,
    "uppercase": false,
    "minlength": 2,
    "maxlength": 100,
    "match": "/^[a-zA-Z0-9_-]+$/i",
    "enum": ["admin", "user", "guest"],
    "default": "guest"
  },

  "simpleNumber": {
    "type": "Number",
    "min": 0,
    "max": 999999,
    "default": 0
  },

  "simpleBoolean": {
    "type": "Boolean",
    "default": false,
    "required": true
  },

  "simpleDate": {
    "type": "Date",
    "default": "Date.now"
  },

  "objectIdRefSingle": {
    "type": "ObjectId",
    "ref": "User",
    "required": true
  },

  "objectIdRefArray": {
    "type": "Array",
    "items": {
      "type": "ObjectId",
      "ref": "Category"
    }
  },

  "mixedField": {
    "type": "Mixed"
  },

  "mapField": {
    "type": "Map",
    "of": {
      "type": "String"
    }
  },

  "bufferField": {
    "type": "Buffer"
  },

  "decimalField": {
    "type": "Decimal128"
  },

  "arrayOfStrings": {
    "type": "Array",
    "items": {
      "type": "String",
      "trim": true,
      "enum": ["active", "inactive", "pending"]
    },
    "default": []
  },

  "arrayOfNumbers": {
    "type": "Array",
    "items": {
      "type": "Number",
      "min": 1,
      "max": 5
    }
  },

  "nestedObjectWithType": {
    "type": "Object",
    "properties": {
      "street": { "type": "String", "required": true },
      "city": { "type": "String" },
      "coordinates": {
        "type": "Array",
        "items": { "type": "Number" }
      }
    },
    "required": true
  },

  "nestedObjectWithoutTypeKeyword": {
    "profile": {
      "firstName": { "type": "String" },
      "lastName": { "type": "String" },
      "age": { "type": "Number", "min": 0 }
    },
    "settings": {
      "theme": { "type": "String", "default": "dark" },
      "notifications": { "type": "Boolean", "default": true }
    }
  },

  "deeplyNestedWithMixed": {
    "metadata": {
      "tags": {
        "type": "Array",
        "items": { "type": "String" }
      },
      "extra": {
        "type": "Mixed"
      },
      "stats": {
        "views": { "type": "Number", "default": 0 },
        "likes": { "type": "Number", "default": 0 }
      }
    }
  },

  "fieldWithIndex": {
    "type": "String",
    "index": true
  },

  "fieldWithCompoundIndex": {
    "type": "String",
    "index": { "unique": true, "sparse": true }
  },

  "fieldWithSparse": {
    "type": "String",
    "sparse": true
  },

  "emailWithAllValidations": {
    "type": "String",
    "required": true,
    "unique": true,
    "lowercase": true,
    "trim": true,
    "match": "/^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$/"
  },

  "statusWithEnumAndDefault": {
    "type": "String",
    "enum": ["draft", "published", "archived"],
    "default": "draft"
  },

  "scoreWithMinMax": {
    "type": "Number",
    "min": 0,
    "max": 100,
    "default": 50
  },

  "createdAtSpecial": {
    "type": "Date",
    "default": "Date.now",
    "immutable": true
  },

  "tagsArrayWithDefaultEmpty": {
    "type": "Array",
    "items": { "type": "String", "trim": true },
    "default": []
  }
}
  