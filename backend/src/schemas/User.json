{
  "_id": {
    "type": "string",
    "description": "Unique identifier for the room (MongoDB ObjectId)."
  },
  "username": {
    "type": "String",
    "required": true,
    "unique": true,
    "trim": true
  },
  "password": {
    "type": "String",
    "required": true
  },
  "email": {
    "type": "String",
    "required": true,
    "unique": true,
    "trim": true,
    "lowercase": true
  },
  "status": {
    "type": "String",
    "enum": ["online", "offline"],
    "default": "offline"
  },
  "useFieldsFrom": ["detail"],
  "behaviors": ["preSave", "print", "isOnline"]
}
